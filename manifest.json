{
  "name": "Support Toolkit",
  "description": "Bulk open URLs, group them under 'Failed LP', and format Grafana data to TSV for spreadsheets.",
  "version": "1.5",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "tabGroups",
    "notifications",
    "scripting",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://idomoo.grafana.net/*",
    "https://app.alertops.com/*",
    "https://mail.google.com/*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "open-lp-urls": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Open & group LP URLs (AlertOps only)"
    },
    "format-company-batch": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Format Company Batch (Grafana only)"
    },
    "format-media-errors": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Format Media Errors (Grafana only)"
    },
    "copy-daily-report": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Paste Daily Report (Gmail only)"
    }
  }
}